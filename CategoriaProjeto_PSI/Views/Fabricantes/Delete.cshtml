@model CategoriaProjeto_PSI.Models.Fabricante

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Libre+Baskerville&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Bebas Neue';
        }

        th {
            font-family: 'Bebas Neue';
            font-size: 20px;
        }

        td {
            height: 40px;
        }

        .nome {
            width: 80px;
        }

        nav {
            display: flex;
        }

            nav a {
                background-color: white;
                border-radius: 5px;
                text-align: center;
                padding: 5px;
                color: deepskyblue;
                text-decoration: none;
                transition-duration: 0.3s;
            }

                nav a:hover {
                    filter: brightness(1.2);
                }

                nav a::after {
                    content: "";
                    width: 0%;
                    height: 2px;
                    background: deepskyblue;
                    position: absolute;
                    left: 0;
                    bottom: 0rem;
                    transition: width 0.2s;
                }

                nav a:hover::after {
                    width: 100%;
                }

        a {
            border-radius: 5px;
            text-align: center;
            padding: 5px;
            background-color: deepskyblue;
            color: white;
            text-decoration: none;
            transition-duration: 0.3s;
        }

            a:hover {
                filter: brightness(1.2);
            }

        th {
            color: deepskyblue;
            border-bottom: solid 2px deepskyblue;
            padding: 2px;
            font-style: normal;
        }

        td {
            padding: 5px;
            border-bottom: solid 2px deepskyblue;
        }

        input[type="submit" i] {
            background-color: deepskyblue;
            padding: 5px;
            color: white;
            border: none;
            border-radius: 5px;
            font-family: 'Bebas Neue';
            font-size: 100%;
            transition-duration: 0.3s;
        }

            input[type="submit" i]:hover {
                filter: brightness(1.2);
            }

        .bnt {
            margin-bottom: 13px;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Fabricante</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>
    
        </dl>
    
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
    
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
</body>
</html>
